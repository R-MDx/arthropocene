<div id="post-<%= post.id %>" class="container">
  <h1><%= post.title %></h1>
  <h2><%= post.description %></h2>
  <h2><%= post.story %></h2>

  <%= link_to "Delete Your Post", post_path(post.id), method: :delete, remote: true %>

  <p><%= pluralize post.comments.size, "comment" %></p>

  <div id="comments">
    <% if post.comments.blank? %>
      <p>Be the first to write a comment for <%= post.title %></p>
      <%= render 'comments/form', comment: @comment, post: post%>
    <% else %>
      <% post.comments.each do |comment| %>
        <%= render 'comments/show', comment: comment %>
      <% end %>
      <%= render 'comments/form', comment: @comment, post: post%>
    <% end %>
  </div>
</div>

