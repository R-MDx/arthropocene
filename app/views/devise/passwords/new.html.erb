<div class="login">
  <div class="heading">
    <h2>Forgot your password?</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="input-group input-group-lg">
      <span class="input-group-addon"><i class="fa fa-user"></i></span>
      <%= f.input :email, required: true, label: false, autofocus: true, placeholder:"Username or email", class: "password optional form-control" %>
    </div>

<!--   <div class="input-group input-group-lg">
    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
  </div> -->
    <button type="submit" class="float" name="commit" value="Send me reset password instructions">Reset password </button>
</div>
<% end %>
 <div class="login-links text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
