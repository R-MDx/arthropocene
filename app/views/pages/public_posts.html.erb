<div class="container">

  <h1>Public Posts</h1>

  <% @posts.each do |post| %>
    <div id="post-<%= post.id %>" class="col-xs-12">
      <%= render 'posts/show', post: post, comment: @comment %>
      <% if user_signed_in? && post.user_id == current_user.id %>
        <%= link_to "Delete Your Post", post_path(post.id), method: :delete, remote: true %>
      <% end %>
    </div>
  <% end %>
</div>

