<div id="user">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div class="profile-details">


          <div>
            <%= image_tag current_user.picture, class: "user-image" %>
          </div>

          <h2><%= current_user.first_name %> <%= current_user.last_name %></h2>
          <h3><%= current_user.email %></h3>
        </div>
      </div>
    </div>
    <% if !current_user.posts.blank? %>
      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2">
          <div class="posts-wrapper">
            <% current_user.posts.each do |post| %>
              <%= render 'posts/show', post: post, comment: @comment %>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <%= link_to t(".top_call_to_action", default: "Express Yourself"), new_user_post_path(current_user.id), class: "btn btn-primary self-express" %>
    <% end %>
    </div>
  </div>
</div>
