<div id="user">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div class="profile-details">

          <div class="user-image-canvas">
            <%= image_tag current_user.picture, class: "user-image" %>
          </div>

          <h2><%= current_user.first_name %> <%= current_user.last_name %></h2>
          <h3><%= current_user.email %></h3>
        </div>
      </div>
    </div>
    <%= link_to t(".top_call_to_action", default: "Express Yourself"), new_user_post_path(current_user.id), class: "btn btn-primary self-express" %>
  </div>
</div>
